<div class="container">
  <h1>Add a Review for <%=@restaurant.name %></h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, collection: 0..5, include_blank: true %>
    <%= f.input :content %>
    <%= f.submit class: 'btn btn-success' %>
  <% end %>
  <h4><%= link_to "Go back to list", restaurants_path %></h4>
  <h4><%= link_to "Go back to restaurant", restaurant_path(@restaurant) %></h4>
</div>
